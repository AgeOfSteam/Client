<IfModInstalled name="ReactorCraft">
	<ConfigSection>            
    
        <OptionDisplayGroup name='groupReactorCraft' displayName='ReactorCraft' displayState='shown'>
            <Description> 
                Distribution options for the ReactorCraft ores.
            </Description>
        </OptionDisplayGroup> 
		
		        <!--*****************   Calcite   *********************-->
        <ConfigSection>        
        
            <OptionChoice name='calciteDist' default='layeredVeins' displayState='hidden' displayGroup='groupReactorCraft'>
                <Description> Controls how Calcite is generated </Description>
                <DisplayName>Calcite Type</DisplayName>
                <Choice value='layeredVeins' displayValue='Veins'>
                    <Description> 
                        Single vertical veins starting near the surface and extending down about halfway to bedrock.  Most common in desert climates.
                    </Description>
                </Choice>
            </OptionChoice>
            
            <OptionNumeric name='calciteFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Frequency multiplier for Calcite distributions </Description>
                <DisplayName>Calcite Freq.</DisplayName>
            </OptionNumeric>
            
            <OptionNumeric name='calciteSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Size multiplier for Calcite distributions </Description>
                <DisplayName>Calcite Size</DisplayName>
            </OptionNumeric>    
                
        </ConfigSection>           
        
		
		<!--******************   Indium   *********************-->
        <ConfigSection>
        
            <OptionChoice name='indiumDist' displayState='hidden' displayGroup='groupReactorCraft'>
                <Description> Controls how Indium is generated </Description>
                <DisplayName>Indium Type</DisplayName>
                <Default>layeredVeins</Default>
                <Choice value='layeredVeins' displayValue='Veins'>
                    <Description> 
                        Isolated veins found about two thirds of the way down to bedrock.  Unusually common in mountains.
                    </Description>
                </Choice>
            </OptionChoice>
            
            <OptionNumeric name='indiumFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Frequency multiplier for Indium distributions </Description>
                <DisplayName>Indium Freq.</DisplayName>
            </OptionNumeric>
            
            <OptionNumeric name='indiumSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Size multiplier for Indium distributions </Description>
                <DisplayName>Indium Size</DisplayName>
            </OptionNumeric>
            
        </ConfigSection>
		
		<!--******************   Cadmium   *********************-->
        <ConfigSection>
        
            <OptionChoice name='cadmiumDist' displayState='hidden' displayGroup='groupReactorCraft'>
                <Description> Controls how Cadmium is generated </Description>
                <DisplayName>Cadmium Type</DisplayName>
                <Default>layeredVeins</Default>
                <Choice value='layeredVeins' displayValue='Veins'>
                    <Description> 
                        Isolated veins found about two thirds of the way down to bedrock.  Unusually common in mountains.
                    </Description>
                </Choice>
            </OptionChoice>
            
            <OptionNumeric name='cadmiumFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Frequency multiplier for Cadmium distributions </Description>
                <DisplayName>Cadmium Freq.</DisplayName>
            </OptionNumeric>
            
            <OptionNumeric name='cadmiumSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Size multiplier for Cadmium distributions </Description>
                <DisplayName>Cadmium Size</DisplayName>
            </OptionNumeric>
            
        </ConfigSection>  
		
		<!--******************   Magnetite   *********************-->
        <ConfigSection>
        
            <OptionChoice name='magnetiteDist' displayState='hidden' displayGroup='groupReactorCraft'>
                <Description> Controls how Magnetite Ore is generated </Description>
                <DisplayName>Magnetite Ore Type</DisplayName>
                <Default>layeredVeins</Default>
                <Choice value='layeredVeins' displayValue='Veins'>
                    <Description> 
                        Isolated veins found about two thirds of the way down to bedrock.  Unusually common in mountains.
                    </Description>
                </Choice>
            </OptionChoice>
            
            <OptionNumeric name='magnetiteFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Frequency multiplier for Magnetite Ore distributions </Description>
                <DisplayName>Magnetite Ore Freq.</DisplayName>
            </OptionNumeric>
            
            <OptionNumeric name='magnetiteSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Size multiplier for Magnetite Ore distributions </Description>
                <DisplayName>Magnetite Ore Size</DisplayName>
            </OptionNumeric>
            
        </ConfigSection>
		
		<!--*****************   Pitchblend   *********************-->
		<ConfigSection> 
			<OptionChoice name='pitchblendDist' default='strategicClouds' displayState='hidden' displayGroup='groupReactorCraft'>
				<Choice value='strategicClouds' displayValue='Clouds'>
                    <Description> 
                        Rare, sparsely populated clouds of ore extending over several chunks.
                    </Description>
                </Choice>
			</OptionChoice>
			<OptionNumeric name='pitchFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Frequency multiplier for fluorite distributions </Description>
                <DisplayName>fluorite Freq.</DisplayName>
            </OptionNumeric>
            
            <OptionNumeric name='pitchSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Size multiplier for fluorite distributions </Description>
                <DisplayName>fluorite Size</DisplayName>
            </OptionNumeric>
		</ConfigSection> 
		
        <!--*****************   Fluorite   *********************-->
        <ConfigSection>        
            <OptionChoice name='fluoriteDist' default='strategicClouds' displayState='hidden' displayGroup='groupReactorCraft'>
				<Choice value='strategicClouds' displayValue='Clouds'>
                    <Description> 
                        Rare, sparsely populated clouds of ore extending over several chunks.  Found only in swamps. 
                    </Description>
                </Choice>
			</OptionChoice>
			
			<OptionNumeric name='fluoriteFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Frequency multiplier for fluorite distributions </Description>
                <DisplayName>fluorite Freq.</DisplayName>
            </OptionNumeric>
            
            <OptionNumeric name='fluoriteSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupReactorCraft'>
                <Description> Size multiplier for fluorite distributions </Description>
                <DisplayName>fluorite Size</DisplayName>
            </OptionNumeric>    
                
        </ConfigSection>             
    </ConfigSection> 
	
	<!--*****************************   Distributions   ************************* -->
    <IfCondition condition=':= ?COGActive'>
        <!--**********   Default Deposit Removal   *************-->
		<Substitute name='ReactorCraftSubstitute' block='minecraft:stone'>
			<Description> 
				Replace vanilla-generated ore clusters with stone.   
			</Description>
			<Comment>  
				The global option deferredPopulationRange must be large enough to catch all ore clusters (>= 32).
			</Comment>
			<Replaces block='ReactorCraft:reactorcraft_block_ore:1' />
			<Replaces block='ReactorCraft:reactorcraft_block_ore:2' />
			<Replaces block='ReactorCraft:reactorcraft_block_ore:3' />
			<Replaces block='ReactorCraft:reactorcraft_block_ore:4' /> <!-- Silver -->
			<Replaces block='ReactorCraft:reactorcraft_block_ore:7' />
			<Replaces block='ReactorCraft:reactorcraft_block_ore:8' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:0' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:1' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:2' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:3' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:4' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:5' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:6' />
			<Replaces block='ReactorCraft:reactorcraft_block_fluoriteore:7' />
		</Substitute>
		
		<!--*****************   Pitchblend   *********************-->
		<ConfigSection>
			<IfCondition condition=':= pitchblendDist = "strategicClouds"'>
				<Cloud name='pitchblendCloud' block='ReactorCraft:reactorcraft_block_ore:1' inherits='PresetStrategicCloud'>
					<Description> 
						Diffuse Pitchblend cloud surrounded by single-block "hint" veins, found in multiple biomes.
					</Description> 
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor> 
					<Setting name='DistributionFrequency' 
						avg=':= 4.5 * pitchFreq * _default_'/>
					<Setting name='CloudRadius' 
						avg=':= 0.8 * pitchSize * _default_' 
						range=':= 0.8 * pitchSize * _default_'/>
					<Setting name='CloudThickness' 
						avg=':= 0.8 * pitchSize * _default_' 
						range=':= pitchSize * _default_'/>
				</Cloud>
				<Veins name='pitchblendMountain' block='ReactorCraft:reactorcraft_block_ore:1' inherits='PresetHintVeins'>
                    <Description>  This roughly triples the chance of
                    finding pitchblend in Sandy and Mountain terrain. </Description>      
                    <Setting name='MotherlodeFrequency' avg=':= 2 * _default_'/>
                    <Setting name='MotherlodeHeight' avg=':= _default_' range=':= 2 * _default_'/>
                    <Setting name='BranchHeightLimit' avg=':= 2 * _default_'/>
                    <BiomeType name='Sandy'/>
					<BiomeType name='Mountain'/>
                </Veins>
			</IfCondition>
		</ConfigSection>

		<!--*****************   Magnetite Ore   *********************-->
		<ConfigSection>
			<IfCondition condition=':= magnetiteDist = "layeredVeins"'>    
                <Veins name='magnetiteVeins' block='ReactorCraft:reactorcraft_block_ore:8' inherits='PresetLayeredVeins'>    
                    <Description>
                        Sparse veins in the 10-30 range.
                    </Description>
                    <DrawWireframe>:=drawWireframes</DrawWireframe>
                    <WireframeColor>0x40AAAAAA</WireframeColor>
                    <Setting name='MotherlodeFrequency' 
							avg=':= 0.85 * magnetiteFreq * _default_'/>
                    <Setting name='MotherlodeSize' avg=':= 0.85 * magnetiteSize * _default_' range=':= 0.85 * magnetiteSize * _default_'/>
                    <Setting name='MotherlodeHeight' avg=':= 20/64 * dimension.groundLevel' range=':= 10/64 * dimension.groundLevel'/>
                    <Setting name='BranchLength'
                             avg=':= 0.8 * _default_'
                             range=':= 0.75 * _default_'/>
                    <Setting name='BranchFrequency' avg=':= 0.85 * _default_'/> 
                    <Setting name='BranchHeightLimit' avg='12'/>
                    <Setting name='SegmentRadius'
                             avg=':= 0.75 * magnetiteSize * _default_'
                             range=':= 0.5 * magnetiteSize * _default_'/>
                    <Setting name='SegmentRadius' avg=':= magnetiteSize * _default_' range=':= magnetiteSize * _default_'/>
                </Veins>
                <Veins name='magnetiteVeinsMountain' inherits='magnetiteVeins'>
                    <Description>  This roughly triples the chance of
                    finding magnetite in mountainous terrain. </Description>      
                    <Setting name='MotherlodeFrequency' avg=':= 2 * _default_'/>
                    <Setting name='MotherlodeHeight' avg=':= _default_' range=':= 2 * _default_'/>
                    <Setting name='BranchHeightLimit' avg=':= 2 * _default_'/>
                    <BiomeType name='Mountain'/>
                </Veins>
            </IfCondition>
		</ConfigSection>
		
		<!--*****************   Fluorite   *********************-->
		<ConfigSection>
			<IfCondition condition=':= fluoriteDist = "strategicClouds"'>
				<Cloud name='fluoriteCloud' block='ReactorCraft:reactorcraft_block_fluoriteore:6' inherits='PresetStrategicCloud'>
					<Description> 
						Diffuse Fluorite cloud surrounded by single-block "hint" veins, found in multiple biomes.
					</Description> 
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor> 
					<Setting name='DistributionFrequency' avg=':= 4.5 * fluoriteFreq * _default_'/>
					<Setting name='CloudRadius' avg=':= 0.65 * fluoriteSize * _default_' range=':= 0.5 * fluoriteSize * _default_'/>
					<Setting name='CloudThickness' avg=':= 0.7 * fluoriteSize * _default_' range=':= 0.7 * fluoriteSize * _default_'/>
				</Cloud>	    
				<Veins name='yellowfluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:7' inherits='PresetHintVeins'>
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor>
					<Setting name='MotherlodeFrequency' avg=':= 0.2 * _default_' range=':= _default_'/>
					<Setting name='MotherlodeRangeLimit' avg=':= 0.45 * fluoriteSize * _default_' range=':= 0.65 * fluoriteSize * _default_'/>                    
					<ReplacesOre block='stone'/>
					<BiomeType name='Sandy'/>
					<Replaces block='minecraft:sandstone'/>             
				</Veins>
				<Veins name='bluefluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:0' inherits='PresetHintVeins'>
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor>
					<Setting name='MotherlodeFrequency' avg=':= 0.2 * _default_' range=':= _default_'/>
					<Setting name='MotherlodeRangeLimit' avg=':= 0.45 * fluoriteSize * _default_' range=':= 0.65 * fluoriteSize * _default_'/>                    
					<ReplacesOre block='stone'/>
					<BiomeType name='Ocean'/>
				</Veins> 
				<Veins name='greenfluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:4' inherits='PresetHintVeins'>
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor>
					<Setting name='MotherlodeFrequency' avg=':= 0.2 * _default_' range=':= _default_'/>
					<Setting name='MotherlodeRangeLimit' avg=':= 0.45 * fluoriteSize * _default_' range=':= 0.65 * fluoriteSize * _default_'/>                    
					<ReplacesOre block='stone'/>
					<BiomeType name='Swamp'/>
				</Veins> 
				<Veins name='orangefluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:2' inherits='PresetHintVeins'>
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor>
					<Setting name='MotherlodeFrequency' avg=':= 0.2 * _default_' range=':= _default_'/>
					<Setting name='MotherlodeRangeLimit' avg=':= 0.45 * fluoriteSize * _default_' range=':= 0.65 * fluoriteSize * _default_'/>                    
					<ReplacesOre block='stone'/>
					<BiomeType name='Cold'/>
				</Veins>	
				<Veins name='pinkfluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:1' inherits='PresetHintVeins'>
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor>
					<Setting name='MotherlodeFrequency' avg=':= 0.2 * _default_' range=':= _default_'/>
					<Setting name='MotherlodeRangeLimit' avg=':= 0.45 * fluoriteSize * _default_' range=':= 0.65 * fluoriteSize * _default_'/>                    
					<ReplacesOre block='stone'/>
					<BiomeType name='Forest'/>
				</Veins>	
				<Veins name='magentafluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:3' inherits='PresetHintVeins'>
					<DrawWireframe>:=drawWireframes</DrawWireframe>
					<WireframeColor>0x40550000</WireframeColor>
					<Setting name='MotherlodeFrequency' avg=':= 0.2 * _default_' range=':= _default_'/>
					<Setting name='MotherlodeRangeLimit' avg=':= 0.45 * fluoriteSize * _default_' range=':= 0.65 * fluoriteSize * _default_'/>                    
					<ReplacesOre block='stone'/>
					<BiomeType name='Plains'/>
				</Veins>				
				<Veins name='redfluoriteHintVeins' block='ReactorCraft:reactorcraft_block_fluoriteore:5' inherits='PresetHintVeins'> 
                    <Description> 
                        Isolated veins (no motherlodes) that run vertically.  These veins are fairly common, but a challenge to mine because you have to tunnel straight down.
                    </Description>  
                    <DrawWireframe>:=drawWireframes</DrawWireframe>
                    <WireframeColor>0x40550000</WireframeColor> 
                    <Setting name='MotherlodeFrequency' avg=':= 1.4 * fluoriteFreq * _default_'/>
                    <Setting name='SegmentRadius' avg=':= fluoriteSize * _default_' range=':= fluoriteSize * _default_'/>
					<BiomeType name='Mountain'/>
					<ReplacesOre block='stone'/>
				</Veins>
			</IfCondition>
		</ConfigSection>
		
		<!--******************   Indium   *********************-->            
        <ConfigSection>
            <IfCondition condition=':= indiumDist = "layeredVeins"'>    
                <Veins name='indiumVeins' block='ReactorCraft:reactorcraft_block_ore:3' inherits='PresetLayeredVeins'>    
                    <Description>
                        Sparse veins in the 10-30 range.
                    </Description>
                    <DrawWireframe>:=drawWireframes</DrawWireframe>
                    <WireframeColor>0x40AAAAAA</WireframeColor>
                    <Setting name='MotherlodeFrequency' avg=':= 0.85 * indiumFreq * _default_'/>
                    <Setting name='MotherlodeSize' avg=':= 0.85 * indiumSize * _default_' range=':= 0.85 * indiumSize * _default_'/>
                    <Setting name='MotherlodeHeight' avg=':= 20/64 * dimension.groundLevel' range=':= 10/64 * dimension.groundLevel'/>
                    <Setting name='BranchLength'
                             avg=':= 0.8 * _default_'
                             range=':= 0.75 * _default_'/>
                    <Setting name='BranchFrequency' avg=':= 0.85 * _default_'/> 
                    <Setting name='BranchHeightLimit' avg='12'/>
                    <Setting name='SegmentRadius'
                             avg=':= 0.75 * indiumSize * _default_'
                             range=':= 0.5 * indiumSize * _default_'/>
                    <Setting name='SegmentRadius' avg=':= indiumSize * _default_' range=':= indiumSize * _default_'/>
                </Veins>
            </IfCondition>     
        </ConfigSection>
		
		<!--******************   Cadmium   *********************-->            
        <ConfigSection>
            
            <IfCondition condition=':= cadmiumDist = "layeredVeins"'>    
                <Veins name='indiumVeins' block='ReactorCraft:reactorcraft_block_ore:2' inherits='PresetLayeredVeins'>    
                    <Description>
                        Sparse veins in the 10-30 range.
                    </Description>
                    <DrawWireframe>:=drawWireframes</DrawWireframe>
                    <WireframeColor>0x40AAAAAA</WireframeColor>
                    <Setting 	name='MotherlodeFrequency' 
								avg=':= 0.85 * cadmiumFreq * _default_'/>
                    <Setting 	name='MotherlodeSize' 
								avg=':= 0.85 * cadmiumSize * _default_'
								range=':= 0.85 * cadmiumSize * _default_'/>
                    <Setting 	name='MotherlodeHeight' 
								avg=':= 20/64 * dimension.groundLevel' 
								range=':= 10/64 * dimension.groundLevel'/>
                    <Setting 	name='BranchLength'
								avg=':= 0.8 * _default_'
								range=':= 0.75 * _default_'/>
                    <Setting 	name='BranchFrequency' 
								avg=':= 0.85 * _default_'/> 
                    <Setting 	name='BranchHeightLimit' avg='12'/>
                    <Setting 	name='SegmentRadius'
								avg=':= 0.75 * cadmiumSize * _default_'
								range=':= 0.5 * cadmiumSize * _default_'/>
                    <Setting 	name='SegmentRadius' 
								avg=':= cadmiumSize * _default_' 
								range=':= cadmiumSize * _default_'/>
                </Veins>
            </IfCondition>     
        </ConfigSection>
		
		<!--*****************   Calcite   *********************-->
        <ConfigSection>
            <IfCondition condition=':= calciteDist = "layeredVeins"'>
                <Veins name='CalciteVeins' block='ReactorCraft:reactorcraft_block_ore:7' inherits='PresetVerticalVeins'> 
                    <Description> 
                        Isolated veins (no motherlodes) that run vertically.  These veins are fairly common, but a challenge to mine because you have to tunnel straight down.
                    </Description>  
                    <DrawWireframe>:=drawWireframes</DrawWireframe>
                    <WireframeColor>0x40550000</WireframeColor> 
                    <Setting name='MotherlodeFrequency' avg=':= 2 * calciteFreq * _default_'/>
                    <Setting name='SegmentRadius' avg=':= calciteSize * _default_' range=':= calciteSize * _default_'/>
                </Veins>
                <Veins name='CalciteVeinsDesert' block='ReactorCraft:reactorcraft_block_ore:7' inherits='PresetHintVeins'> 
                    <Description> This roughly triples the chance of finding calcite in deserts. </Description> 
                    <Setting name='MotherlodeFrequency' avg=':= 2 * _default_'/> 
                    <ReplacesOre block='stone'/>
                    <Replaces block='minecraft:sandstone'/> 
                    <BiomeType name='Sandy'/>  
                </Veins>
				<Veins name='CalciteVeinsOcean' block='ReactorCraft:reactorcraft_block_ore:7' inherits='PresetHintVeins'> 
                    <Description> This roughly triples the chance of finding calcite in Ocean. </Description> 
                    <Setting name='MotherlodeFrequency' avg=':= 2 * _default_'/> 
                    <ReplacesOre block='stone'/>
                    <BiomeType name='Ocean'/>  
                </Veins>
            </IfCondition>        
        </ConfigSection>
		
	</IfCondition>
</IfModInstalled>